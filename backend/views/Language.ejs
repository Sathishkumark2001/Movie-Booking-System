                                    $(document).ready(function () {
                                        $("#maincollapseTwo").removeClass('collapsed');
                                        $("#collapseTwo").addClass('show');
                                        $("#language").addClass('bg-primary text-white');

                                    });
                                </script>


    </body>

    </html>