<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Del luna - Dashboard</title>

    <!-- Custom fonts for this template-->
    <link href="../../../vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="../../../css/sb-admin-2.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('partials/sidenav.ejs'); -%>

            <!-- End of Sidebar -->

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <!-- Topbar -->
                    <%- include('partials/navbar.ejs'); -%>
                        <div class="row">

                            <form action="/theaterScreen/slot/post" method="post" style="width: 500px; margin:auto">
                                <input type="hidden" name="_id" value="<%=slot._id %>">
                                <br>
                                <br>
                                <div class="form-outline mb-4">
                                    From<input type="text" name="date1" id="datepicker" value="<%= slot.date1 %>">
                                    <span> To<input type="text" name="date2" id="datepicker1"
                                            value="<%= slot.date2 %>"></span>
                                </div>
                                <div>
                                    <label for="">Movie</label>
                                    <select name="Movie" class="form-control">
                                        <% movie.forEach((movies)=>{ %>
                                            <option value="<%=slot.Movie %>">
                                                <%=movies.Movie_name%>
                                            </option>
                                            <% }) %>
                                    </select>
                                </div><br>
                                <div class="form-outline mb-4">
                                    Slot Time From
                                    <input type="time" id="appt" name="appt" value="<%=slot.appt%>" autocomplete="off">
                                    <span>

                                        Slot Time To
                                        <input type="time" id="appt" name="appt1" value="<%=slot.appt1 %>"
                                            autocomplete="off">
                                    </span>
                                </div>
                                <!-- Option 1: CoreUI for Bootstrap Bundle with Popper -->
                                <script
                                    src="https://cdn.jsdelivr.net/npm/@coreui/coreui@4.2.0/dist/js/coreui.bundle.min.js"
                                    integrity="sha384-n0qOYeB4ohUPebL1M9qb/hfYkTp4lvnZM6U6phkRofqsMzK29IdkBJPegsyfj/r4"
                                    crossorigin="anonymous"></script>

                                <!-- Option 2: CoreUI PRO for Bootstrap Bundle with Popper -->
                                <script
                                    src="https://cdn.jsdelivr.net/npm/@coreui/coreui-pro@4.3.2/dist/js/coreui.bundle.min.js"
                                    integrity="sha384-AekAC2S7WX3JY6Z9cKOFyCsxgzI1Dq3i5zx2j7WhH3DdYA7/qHSzs4j90SCj9DJV"
                                    crossorigin="anonymous"></script>

                                <select name="active" id="active" class="form-control">
                                    <option value="1" <%=slot.active==true ? "selected" : "" %>>Active
                                    </option>
                                    <option value="0" <%=slot.active==false ? "selected" : "" %>>Inactive
                                    </option>
                                </select>
                                <br>
                                <div class="d-flex">
                                    <input type="submit" value="Submit"
                                        class="btn btn-primary justify-content-center mt-2">
                                </div>



                            </form><br><br>


                        </div>
                        <!-- Bootstrap core JavaScript-->
                        <%- include('partials/footer.ejs'); -%>

                            <script>
                                $(function () {
                                    $("#datepicker").datepicker({
                                        dateFormat: "dd-mm-yy"
                                    }

                                    );
                                });
                                $(function () {
                                    $("#datepicker1").datepicker({
                                        dateFormat: "dd-mm-yy"
                                    }

                                    );
                                });
                                $(document).ready(function () {
                                    $("#maincollapsePages").removeClass('collapsed');
                                    $("#collapsePages").addClass('show');
                                    $("#theater").addClass('bg-primary text-white');

                                });

                            </script>

</body>

</html>