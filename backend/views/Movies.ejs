<%- include('partials/movieheader.ejs'); -%>

    <body id="page-top">

        <!-- Page Wrapper -->
        <div id="wrapper">

            <!-- Sidebar -->
            <%- include('partials/sidenav.ejs'); -%>
                <!-- End of Sidebar -->
                <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js"
                    type="text/javascript"></script>
                <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js"
                    type="text/javascript"></script>
                <link href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css"
                    rel="Stylesheet" type="text/css" />

                <!-- Content Wrapper -->
                <div id="content-wrapper" class="d-flex flex-column">

                    <!-- Main Content -->
                    <div id="content">

                        <!-- Topbar -->
                        <%- include('partials/navbar'); -%>

                            <!-- End of Topbar -->

                            <!-- Begin Page Content -->
                            <div class="container-fluid">

                                <!-- Page Heading -->


                                <!-- Content Row -->
                                <div class="row">
                                    <div class="container">
                                        <!-- Nav tabs -->
                                        <ul class="nav nav-tabs" role="tablist">
                                            <li class="nav-item">
                                                <a class="nav-link active" data-toggle="tab" href="#home">Home</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" data-toggle="tab" href="#menu1">Menu 1</a>
                                            </li>

                                        </ul>

                                        <!-- Tab panes -->
                                        <div class="tab-content">
                                            <div id="home" class="container tab-pane active"><br>
                                                <form action="/Movies" method="post" enctype="multipart/form-data"
                                                    style="width: 500px; margin:auto">
                                                    <div class="form-outline mb-4">
                                                        <div>
                                                            <label for="">Movie Name</label>
                                                            <input type="text" name="Movie_name" class="form-control">
                                                        </div><br>



                                                        <!-- Option 1: CoreUI for Bootstrap Bundle with Popper -->
                                                        <script
                                                            src="https://cdn.jsdelivr.net/npm/@coreui/coreui@4.2.0/dist/js/coreui.bundle.min.js"
                                                            integrity="sha384-n0qOYeB4ohUPebL1M9qb/hfYkTp4lvnZM6U6phkRofqsMzK29IdkBJPegsyfj/r4"
                                                            crossorigin="anonymous"></script>

                                                        <!-- Option 2: CoreUI PRO for Bootstrap Bundle with Popper -->
                                                        <script
                                                            src="https://cdn.jsdelivr.net/npm/@coreui/coreui-pro@4.3.2/dist/js/coreui.bundle.min.js"
                                                            integrity="sha384-AekAC2S7WX3JY6Z9cKOFyCsxgzI1Dq3i5zx2j7WhH3DdYA7/qHSzs4j90SCj9DJV"
                                                            crossorigin="anonymous"></script>
                                                        <div>
                                                            <label for=""> Genre</label>
                                                            <select name="genre" class="form-multi-select" multiple
                                                                data-coreui-search="true">
                                                                <% genre.forEach((eachstate)=>{ %>
                                                                    <option value="<%=eachstate.genre %>">
                                                                        <%=eachstate.genre%>
                                                                    </option>
                                                                    <% }) %>
                                                            </select>
                                                        </div>
                                                        <br>
                                                        <div>
                                                            <label for="">Language </label>
                                                            <select name="Language" class="form-multi-select" multiple
                                                                data-coreui-search="true">
                                                                <% language.forEach((eachstate)=>{ %>
                                                                    <option value="<%=eachstate.language %>">
                                                                        <%=eachstate.language%>
                                                                    </option>
                                                                    <% }) %>
                                                            </select>
                                                        </div>
                                                        <br>
                                                        <div> <span>
                                                                <label for="">From </label>
                                                                <input type="text" id="txtDate" name="From"
                                                                    readonly="readonly" />

                                                                <label for="">To</label>
                                                                <input type="text" id="nexttxtDate" name="To"
                                                                    readonly="readonly" />
                                                            </span>
                                                        </div>


                                                        <script type="text/javascript">


                                                        </script>


                                                        <div>

                                                        </div>
                                                        <br>
                                                        <label for="">status</label><br>
                                                        <select name="active" id="active" class="form-control">
                                                            <option value="1" selected>Active</option>
                                                            <option value="0">Inactive</option>
                                                        </select>
                                                        <br>
                                                        <div>
                                                            <label for="">Movie Release Date</label>
                                                            <input type="date" name="release_date" class="form-control">
                                                        </div>
                                                        <br>
                                                        <div>
                                                            <label for="">Movie Duration</label>
                                                            <input type="text" name="duration" class="form-control">
                                                        </div>
                                                        <br>
                                                        <div>
                                                            <label for="">Movie certification</label>
                                                            <input type="text" name="certification"
                                                                class="form-control">
                                                        </div>
                                                        <br>
                                                        <div>
                                                            <label for="">cast </label>
                                                            <select name="Cast" class="form-multi-select" multiple
                                                                data-coreui-search="true">
                                                                <% Cast.forEach((cast)=>{ %>
                                                                    <option value="<%=cast._id %>">
                                                                        <%=cast.name%>
                                                                    </option>
                                                                    <% }) %>
                                                            </select>
                                                        </div>

                                                        <br>
                                                        <div>
                                                            <label for="">Crew </label>
                                                            <select name="Crew" class="form-multi-select" multiple
                                                                data-coreui-search="true">
                                                                <% Crew.forEach((crew)=>{ %>
                                                                    <option value="<%=crew._id %>">
                                                                        <%=crew.name%>
                                                                    </option>
                                                                    <% }) %>
                                                            </select>
                                                        </div>
                                                        <br>

                                                        <div>
                                                            <label for="">Movie Description</label>
                                                            <textarea name="description" id="" cols="30" rows="5"
                                                                class="form-control"></textarea>
                                                        </div>

                                                        <div>
                                                            <input type="hidden" name="user_id" value="<%= user.id%>">
                                                        </div>
                                                        <div>
                                                            <input type="hidden" name="user_name"
                                                                value="<%= user.email%>">
                                                        </div>
                                                        <label for="">Movie Image</label><br>
                                                        <input type="file" name="myImage" accept="image/*">
                                                        <br>
                                                        <label for="">background Image</label><br>
                                                        <input type="file" name="backImage" accept="image/*">
                                                        <br>

                                                        <div class="d-flex">
                                                            <input type="submit" value="Submit"
                                                                class="btn btn-primary justify-content-center mt-2">
                                                        </div>
                                                </form><br><br>
                                            </div>
                                        </div>
                                        <div id="menu1" class="container tab-pane fade"><br>
                                            <table class=" table w-100 text-center m-auto mt-5 ">
                                                <thead class="bg-primary  text-white">
                                                    <tr>
                                                        <th> S.NO </th>
                                                        <th> Movie</th>
                                                        <th> Genre</th>
                                                        <th>Language</th>
                                                        <th>Release Date</th>
                                                        <th>Movie Duration</th>
                                                        <th>Movie certification</th>
                                                        <th>Image</th>
                                                        <th>Backgroundimg</th>
                                                        <th>Created By</th>
                                                        <th>Edit</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% Movie.forEach((Movies,index)=>{ %>
                                                        <tr class="<%=!Movies.active && " text-danger"%>">
                                                            <td>
                                                                <%= index+1 %>
                                                            </td>
                                                            <td>
                                                                <%= Movies.Movie_name %>
                                                            </td>
                                                            <td>
                                                                <%= Movies.genre %>
                                                            </td>
                                                            <td>
                                                                <%= Movies.Language %>
                                                            </td>
                                                            <td>
                                                                <%= Movies.release_date %>
                                                            </td>
                                                            <td>
                                                                <%= Movies.duration %>
                                                            </td>
                                                            <td>
                                                                <%= Movies.certification %>
                                                            </td>
                                                            <td>
                                                                <img src="<%= Movies.myImage %>" height="70" width="70"
                                                                    alt="">
                                                            </td>
                                                            <td>
                                                                <img src="<%= Movies.backImage %>" height="70"
                                                                    width="70" alt="">

                                                            </td>

                                                            <td>
                                                                <%= user.email%>
                                                            </td>
                                                            <td>
                                                                <a href="/Movies/<%=Movies._id %>"
                                                                    class="btn btn-success" role="button">Edit</a>
                                                            </td>
                                                        </tr>
                                                        <% }) %>
                                                </tbody>
                                            </table>


                                        </div>

                                    </div>
                                </div>



                            </div>

                    </div>
                </div>

                <!-- Content Row -->

                <!-- Area Chart -->

                <!-- Pie Chart -->


                <!-- Content Row -->


                <%- include('partials/footer.ejs'); -%>
                    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"
                        integrity="sha256-xLD7nhI62fcsEZK2/v8LsBcb4lG7dgULkuXoXB/j91c="
                        crossorigin="anonymous"></script>
                    <script>

                        $(document).ready(function () {
                            $("#maincollapsePages").removeClass('collapsed');
                            $("#collapsePages").addClass('show');
                            $("#Movies").addClass('bg-primary text-white');

                        });
                        $(function () {
                            $("#txtDate").datepicker({

                                dateFormat: 'D dd  MM'
                            });

                            $("#nexttxtDate").datepicker({

                                dateFormat: 'D dd  MM'
                            });
                        });

                    </script>


    </body>

    </html>