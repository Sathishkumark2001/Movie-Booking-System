<%- include('partials/movieheader.ejs'); -%>

    <body id="page-top">

        <!-- Page Wrapper -->
        <div id="wrapper">

            <!-- Sidebar -->
            <%- include('partials/sidenav.ejs'); -%>


                <!-- End of Sidebar -->

                <!-- Content Wrapper -->
                <div id="content-wrapper" class="d-flex flex-column">

                    <!-- Main Content -->
                    <div id="content">

                        <!-- Topbar -->
                        <%- include('partials/navbar'); -%>

                            <!-- End of Topbar -->

                            <!-- Begin Page Content -->
                            <div class="container-fluid">

                                <!-- Page Heading -->
                                <!-- Option 1: CoreUI for Bootstrap Bundle with Popper -->
                                <script
                                    src="https://cdn.jsdelivr.net/npm/@coreui/coreui@4.2.0/dist/js/coreui.bundle.min.js"
                                    integrity="sha384-n0qOYeB4ohUPebL1M9qb/hfYkTp4lvnZM6U6phkRofqsMzK29IdkBJPegsyfj/r4"
                                    crossorigin="anonymous"></script>

                                <!-- Option 2: CoreUI PRO for Bootstrap Bundle with Popper -->
                                <script
                                    src="https://cdn.jsdelivr.net/npm/@coreui/coreui-pro@4.3.2/dist/js/coreui.bundle.min.js"
                                    integrity="sha384-AekAC2S7WX3JY6Z9cKOFyCsxgzI1Dq3i5zx2j7WhH3DdYA7/qHSzs4j90SCj9DJV"
                                    crossorigin="anonymous"></script>

                                <!-- Content Row -->
                                <div class="row">
                                    <div class="container">
                                        <!-- Nav tabs -->
                                        <ul class="nav nav-tabs" role="tablist">
                                            <li class="nav-item">
                                                <a class="nav-link active" data-toggle="tab" href="#home">Home</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" data-toggle="tab" href="#menu1">Menu 1</a>
                                            </li>

                                        </ul>

                                        <!-- Tab panes -->
                                        <div class="tab-content">
                                            <div id="home" class="container tab-pane active"><br>
                                                <form action="/theater" method="post" style="width: 500px; margin:auto">
                                                    <div class="form-outline mb-4">
                                                        Theater Name <input type="text" name="theater_name"
                                                            class="form-control"><br>
                                                        Theater Location <input type="text" name="theater_location"
                                                            class="form-control"><br>
                                                        Theater screen<input type="number" id="body"
                                                            name="theater_screen" class="form-control">
                                                    </div>
                                                    <div>
                                                        <label for="">Movie</label>
                                                        <select name="Movie" class="form-multi-select" multiple
                                                            data-coreui-search="true">
                                                            <% movie.forEach((movies)=>{ %>
                                                                <option value="<%=movies._id %>">
                                                                    <%=movies.Movie_name%>
                                                                </option>
                                                                <% }) %>
                                                        </select>
                                                    </div>
                                                    <br>
                                                    <div>
                                                        Movie Time<input type="text" name="time" class="form-control">
                                                    </div>
                                                    <br>
                                                    <select name="active" id="active" class="form-control">
                                                        <option value="1" selected>Active</option>
                                                        <option value="0">Inactive</option>
                                                    </select>
                                                    <div>
                                                        <input type="hidden" name="user_id" value="<%= user.id%>">
                                                    </div>
                                                    <div>
                                                        <input type="hidden" name="user_name" value="<%= user.email%>">
                                                    </div>
                                                    <br>
                                                    <div class="d-flex">
                                                        <input type="submit" value="Submit"
                                                            class="btn btn-primary justify-content-center mt-2">
                                                    </div>

                                                </form><br><br>

                                            </div>
                                            <div id="menu1" class="container tab-pane fade"><br>
                                                <table class=" table  w-100 text-center m-auto mt-5 ">
                                                    <thead class="bg-primary  text-white">
                                                        <tr>
                                                            <th>
                                                                Id
                                                            </th>
                                                            <th>Theater Name</th>
                                                            <th>Theater Location</th>
                                                            <th>Theater screen</th>
                                                            <th>Movie Time</th>
                                                            <th>Created by</th>
                                                            <th>Edit</th>
                                                            <th>Screen</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% theater.forEach((theaters,index)=>{ %>
                                                            <tr class="<%=!theaters.active && " text-danger"%>">
                                                                <td>
                                                                    <%= index+1 %>
                                                                </td>
                                                                <td>
                                                                    <%= theaters.theater_name %>
                                                                </td>
                                                                <td>
                                                                    <%= theaters.theater_location %>
                                                                </td>
                                                                <td>
                                                                    <%= theaters.theater_screen %>
                                                                </td>
                                                                <td>
                                                                    <%= theaters.time%>
                                                                </td>
                                                                <td>
                                                                    <%= theaters.user_name%>
                                                                </td>
                                                                <td>
                                                                    <a href="/theaterEdit/<%=theaters.id %>"
                                                                        class="btn btn-success" role="button">Edit</a>
                                                                </td>
                                                                <td>
                                                                    <a href="/theaterScreen/<%=theaters.id %>"
                                                                        class="btn btn-success" role="button">Screen</a>
                                                                </td>
                                                            </tr>
                                                            <% }) %>
                                                    </tbody>
                                                </table>


                                            </div>

                                        </div>
                                    </div>



                                </div>

                            </div>

                            <!-- Content Row -->

                            <!-- Area Chart -->

                            <!-- Pie Chart -->


                            <!-- Content Row -->
                            <%- include('partials/footer.ejs'); -%>
                                <script>

                                    $(document).ready(function () {
                                        $("#maincollapsePages").removeClass('collapsed');
                                        $("#collapsePages").addClass('show');
                                        $("#theater").addClass('bg-primary text-white');

                                    });

                                </script>

    </body>

    </html>